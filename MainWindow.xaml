<Window x:Class="greenhouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:greenhouse"
        mc:Ignorable="d"
        Title="Отдел управления УФ и ИК" MinHeight="800" MinWidth="900" Height="800" Width="900">
    <Grid>
        <GroupBox x:Name="gBControlPanel" Height="83" Header="Панель управления" Margin="20,10,20,0" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnStart" Grid.Column="0" Content="Старт" Margin="14,10,7,0" 
                        MinWidth="100" Height="36" Cursor="Hand" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="btnStart_Click"/>
                <Button x:Name="btnStop" Grid.Column="1" Content="Стоп" Margin="7,10,7,0" 
                        MinWidth="100" Height="36" Cursor="Hand"
                        HorizontalAlignment="Stretch" VerticalAlignment="Top" IsEnabled="False" Click="btnStop_Click"/>
                <TextBlock Grid.Column="5" x:Name="tBSimulationTime" Margin="7,0,40,7" 
                           VerticalAlignment="Center" 
                           Text="Симуляционное время: 05:30" HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>
        
        <GroupBox x:Name="gBUVSystem" Height="83" Header="Система УФ" Margin="20,108,20,0" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="tBUVState" Margin="10,20,10,20" Grid.Column="0" Grid.Row="0">Состояние: </TextBlock>
                <ProgressBar x:Name="pGUV" HorizontalAlignment="Stretch" Grid.Column="1" MinWidth="630" Margin="10,10,10,10" Maximum="60"></ProgressBar>
            </Grid>
        </GroupBox>
        
        <GroupBox x:Name="gBIKSystem" Height="82" Header="Система ИК" Margin="20,206,20,0" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="tBIKState" Margin="10,20,10,20" Grid.Column="0" Grid.Row="0">Состояние: </TextBlock>
                <ProgressBar x:Name="pGIK" HorizontalAlignment="Stretch" Grid.Column="1" MinWidth="630" Margin="10,10,10,10" Maximum="60"/>
            </Grid>
        </GroupBox>
        
        <GroupBox x:Name="gBCO2" Height="82" Header="Система CO₂" Margin="20,310,20,0" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="tBCO2State" Margin="10,20,10,20" Grid.Column="0" Grid.Row="0">Состояние: </TextBlock>
                <ProgressBar x:Name="pGCO2" HorizontalAlignment="Stretch" Grid.Column="1" MinWidth="630" Margin="10,10,10,10"/>
            </Grid>
        </GroupBox>
        <Grid Margin="10,407,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox x:Name="gBStats" MinHeight="330" Header="Показатели" Grid.Column="0" Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ProgressBar x:Name="pGCO2Value" Grid.Row="0" Grid.Column="0" MaxWidth="70" Margin="48,20,48,20" Orientation="Vertical" Maximum="1300" Minimum="300"/>
                    <ProgressBar x:Name="pGClouds" Grid.Row="0" Grid.Column="1" MaxWidth="70" Margin="48,20,48,20" Orientation="Vertical"/>
                    <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">CO₂</Label>
                    <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">Облачность</Label>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="gBLogs" MinHeight="330" Header="Журнал событий" Grid.Column="1" Margin="10,0,0,0">
            <TextBox x:Name="tBLogs" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap" FontSize="12" Background="#FFF0F0F0" BorderThickness="0" VerticalAlignment="Stretch"/>
        </GroupBox>
        </Grid>
    </Grid>
</Window>